import { defineRouteConfig } from "@medusajs/admin-sdk";
import { createDataTableColumnHelper, FocusModal, Drawer } from "@medusajs/ui";
import { {{toPascalCase module.moduleName}} } from "../../../types";
import { DataTablePage } from "../../../components/data-table-page";
import { {{toPascalCase module.moduleName}}Create } from "./create/{{toKebabCase module.moduleName}}-create";
import { useState } from "react";
import { ActionMenu } from "../../../components/action-menu";
import { Pencil } from "@medusajs/icons";
import { {{toPascalCase module.moduleName}}Edit } from "./edit/{{toKebabCase module.moduleName}}-edit";

const columnHelper = createDataTableColumnHelper<{{toPascalCase module.moduleName}}>();

const {{toPascalCase module.plural}}Page = () => {
  const [showCreate, setShowCreate] = useState(false);
  const [editing{{toPascalCase module.moduleName}}, setEditing{{toPascalCase module.moduleName}}] = useState<{{toPascalCase module.moduleName}} | null>(null);

  const columns = [
    columnHelper.accessor("id", {
      header: "ID",
    }),
    {{#each module.fields}}
    {{#if (eq type "text")}}
    columnHelper.accessor("{{toSnakeCase name}}", {
      header: "{{toTitleCase name}}",
      enableSorting: true,
    }),
    {{/if}}
    {{#if relation}}
    {{#if (eq relation.type "belongsTo")}}
    columnHelper.accessor("{{toSnakeCase name}}.name", {
      header: "{{toTitleCase name}}",
      enableSorting: true,
    }),
    {{/if}}
    {{/if}}
    {{/each}}
    columnHelper.accessor("actions", {
      header: "",
      cell: ({ row }) => {
        const model = row.original;
        return (
          <ActionMenu
            groups={[
              {
                actions: [
                  {
                    label: "Edit",
                    icon: <Pencil />,
                    onClick: () => setEditing{{toPascalCase module.moduleName}}(model),
                  },
                ],
              },
            ]}
          />
        );
      },
    }),
  ];

  return (
    <>
      <DataTablePage<{{toPascalCase module.moduleName}}>
        title="{{toTitleCase module.plural}}"
        subtitle="Manage your {{toLowerCase module.plural}}"
        endpoint="/admin/{{toKebabCase module.plural}}"
        columns={columns}
        queryKey="{{toSnakeCase module.plural}}"
        dataKey="{{toSnakeCase module.plural}}"
        actions={[
          {
            type: "button",
            props: {
              variant: "secondary",
              size: "small",
              children: "Export",
              disabled: true,
            },
          },
          {
            type: "button",
            props: {
              variant: "secondary",
              size: "small",
              children: "Import",
              disabled: true,
            },
          },
          {
            type: "button",
            props: {
              variant: "secondary",
              size: "small",
              children: "Create",
              onClick: () => setShowCreate(true),
            },
          },
        ]}
      />
      {showCreate && (
        <FocusModal open={showCreate} onOpenChange={setShowCreate}>
          <{{toPascalCase module.moduleName}}Create onClose={() => setShowCreate(false)} />
        </FocusModal>
      )}
      
      {editing{{toPascalCase module.moduleName}} && (
        <Drawer open onOpenChange={() => setEditing{{toPascalCase module.moduleName}}(null)}>
          <{{toPascalCase module.moduleName}}Edit 
            model={{jsx-expr "editing" toPascalCase module.moduleName}}
            onClose={() => setEditing{{toPascalCase module.moduleName}}(null)}
          />
        </Drawer>
      )}
    </>
  );
};

export const config = defineRouteConfig({
  label: "{{toTitleCase module.plural}}",
});

export default {{toPascalCase module.plural}}Page; 